root = true

[**]
insert_final_newline = true
trim_trailing_whitespace = true

[**.txt]
charset = utf-8

[**.bat]
end_of_line = crlf

[**.sh]
end_of_line = lf

[**.rb]
indent_style = space
indent_size = 2
charset = utf-8

[**.lua]
indent_style = space
indent_size = 2
charset = utf-8

[**.yml]
indent_style = space
indent_size = 2
charset = utf-8

[**.ninja]
end_of_line = lf
indent_style = space
indent_size = 2

[**.hpp]
indent_style = tab
indent_size = 4

[**.cpp]
indent_style = tab
indent_size = 4
